@model MVCKutuphane.Models.Entity.Yazar
@{
    ViewBag.Title = "YazarGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}


@using (Html.BeginForm("YazarGuncelle", "Yazar", FormMethod.Post))

{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        <div style="margin-bottom: 15px">
            <label>Yazar Id</label>
            @Html.TextBoxFor(i => i.Id, new { @class = "form-control" })
        </div>
        <div style="margin-bottom: 15px">
            <label>Yazar Ad</label>
            @Html.TextBoxFor(i => i.Ad, new { @class = "form-control" })
        </div>
        <div style="margin-bottom: 15px">
            <label>Yazar Soyad</label>
            @Html.TextBoxFor(i => i.Soyad, new { @class = "form-control" })
        </div>
        <div style="margin-bottom: 15px">
            <label>Yazar Detay</label>
            @Html.TextAreaFor(i => i.Detay, new { @class = "form-control" })
        </div>

    </div>
    <button class="btn btn-warning">Yazar Bilgilerini Güncelle</button>

}