@model MVCKutuphane.Models.Entity.Yazar

@{
    ViewBag.Title = "YazarEkle";
    Layout = "~/Views/Shared/Layout.cshtml";
}



<form class="form-group" method="post">

    <div style="margin-top: 15px">

        <label>Yazar Adı</label>
        @Html.TextBoxFor(i => i.Ad, new { @class = "form-control" })
        @Html.ValidationMessageFor(i=>i.Ad,null,new {@style="color:red"})
    </div>
    <div style="margin-top: 15px">

        <label>Yazar Soyadı</label>
        @Html.TextBoxFor(i => i.Soyad, new { @class = "form-control" })
        @Html.ValidationMessageFor(i=>i.Soyad,null,new {@style="color:red"})
    </div>
    <div style="margin-top: 15px">

        <label>Yazar Detay Bilgileri</label>
        @Html.TextAreaFor(i => i.Detay, new { @class = "form-control" })
    </div>
    <div style="margin-top: 15px">
        <button class="btn btn-info" id="Btn1">Yazar Ekle</button>
    </div>


</form>