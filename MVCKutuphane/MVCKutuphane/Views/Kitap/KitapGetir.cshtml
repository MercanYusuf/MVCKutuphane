@model MVCKutuphane.Models.Entity.Kitap
@{
    ViewBag.Title = "KitapGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}


@using (Html.BeginForm("KitapGuncelle", "Kitap", FormMethod.Post))

{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        <div style="margin-bottom: 15px">
            <label>Kitap Id</label>
            @Html.TextBoxFor(i => i.Id, new { @class = "form-control" })
        </div>
        <div style="margin-bottom: 15px">
            <label>Kitap Ad</label>
            @Html.TextBoxFor(i => i.Ad, new { @class = "form-control" })
        </div>
        <div style="margin-bottom: 15px">
            <label>Kategori</label>
            @Html.DropDownListFor(i => i.Kategori1.Id,(List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
        </div>
        <div style="margin-bottom: 15px">
            <label>Yazar</label>
            @Html.DropDownListFor(i => i.Yazar1.Id,(List<SelectListItem>)ViewBag.dgr2, new { @class = "form-control" })
        </div>
        <div style="margin-bottom: 15px">
            <label>Basın Yılı</label>
            @Html.TextBoxFor(i => i.Basimyil, new { @class = "form-control" })
        </div>
        <div style="margin-bottom: 15px">
            <label>Yayın Evi</label>
            @Html.TextBoxFor(i => i.Yayinevi, new { @class = "form-control" })
        </div>
        <div style="margin-bottom: 15px">
            <label>Sayfa</label>
            @Html.TextBoxFor(i => i.Sayfa, new { @class = "form-control" })
        </div>


    </div>
    <button class="btn btn-warning">Kitap Bilgilerini Güncelle</button>
   

}