@using MVCKutuphane.Models.Entity
@model List<Kategori>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>
    Kategoriler
</h2>

<table class="table table-bordered">
    <tr>
        <th>Kategori ID</th>
        <th>Kategori Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
       
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Ad</td>
            <td><a href="/Kategori/KategoriSil/@item.Id"class="btn btn-danger">Sil</a></td>
            <td><a href="/Kategori/KategoriGetir/@item.Id"class="btn btn-success">Güncelle</a></td>
    
        </tr>


    }

</table>
<a href="/Kategori/KategoriEkle/" class="btn btn-primary">Yeni Kategori Ekle</a>