@model MVCKutuphane.Models.Entity.Hareket
@{
    ViewBag.Title = "OduncVer";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<form class="form-group" method="post">

    <div style="margin-top: 15px">

        <label>Üye Id</label>
        @Html.TextBoxFor(i => i.Uye, new { @class = "form-control" })
    </div>
    <div style="margin-top: 15px">

        <label>Kitap Id</label>
        @Html.TextBoxFor(i => i.Kitap, new { @class = "form-control" })
    </div>
    <div style="margin-top: 15px">

        <label>Personel Id</label>
        @Html.TextBoxFor(i => i.Personel, new { @class = "form-control" })
    </div>

    <div style="margin-top: 15px">

        <label>Kitap Alış Tarihi </label>
        <input  type="text" class="form-control" name="AlisTarihi" value="@DateTime.Now.ToShortDateString()" />
    </div>
    <div style="margin-top: 15px">

        <label>Kitap İade Tarihi</label>
        <input type="text" class="form-control" name="İadeTarihi" value="@DateTime.Now.AddDays(7).ToShortDateString()" />
    </div>
    <div style="margin-top: 15px">
        <button class="btn btn-group" style="background-color: crimson; color:white"  id="Btn1">Kitabı Ödünç Ver</button>
    </div>
    <input type="hidden" value="False" name="IslemDurum" />

</form>

